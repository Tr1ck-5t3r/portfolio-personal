---
import { experience } from '../consts';
---

<section id="experience" class="experience">
  <div class="experience-container">
    <h3 class="section-title">Experience ðŸš€</h3>
    <div class="experience-grid">
      {
        experience.map(({ company, role, duration, description, logo }) => (
          <div class="experience-card">
            <div class="experience-header">
              <div class="exp-img">
                <img src={logo} alt={company} class="experience-logo" />
              </div>
              <div>
                <p>ðŸ“… {duration}</p>
                <h3>
                  {company}
                  <br />
                  <small>{role}</small>
                </h3>
              </div>
            </div>
            <div class="experience-body">
              <p>{description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .experience {
    padding: 4rem 2rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .experience-container {
    width: 70dvw;
  }
  .section-title {
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .experience-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: space-evenly;
  }

  .exp-img {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
  }

  .experience-card {
    background-color: var(--bg-color);
    border-radius: 5px;
    max-width: 370px;
    flex: 1 1 370px; /* Ensure cards have a minimum width of 380px and grow if space allows */
    margin: 0.5rem;
    transition: all 0.3s ease;
    border: 3px solid var(--bg-muted);
  }

  .experience-card:hover {
    box-shadow: var(--nav-shadow);
  }

  .experience-header {
    display: flex;
    background-color: var(--bg-muted);
    border-radius: 5px;
    padding: 10px;
    gap: 10px;
    justify-content: center;
  }

  .experience-logo {
    width: 90px;
    height: 90px;
    object-fit: contain;
  }

  .experience-body {
    padding: 0.6rem 1rem;
    background-color: var();
  }

  .experience-footer {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
</style>
