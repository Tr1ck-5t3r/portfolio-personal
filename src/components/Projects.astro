---
import { projectsHome as projects } from '../consts';
---

<section id="projects" class="projects">
  <div class="projects-container">
    <h3 class="section-title">Check out my Projects ðŸ’»</h3>
    <div class="projects-grid">
      {
        projects.map(({ title, description, link, image }) => (
          <div class="project-card">
            <div class="project-header">
              <img src={image} alt={title} class="project-image" />
            </div>
            <div class="project-body">
              <h3>{title}</h3>
              <p>{description}</p>
            </div>
            <div class="project-footer">
              <a href={link} class="btn" target="_blank">
                View Project
              </a>
            </div>
          </div>
        ))
      }
    
    </div>
    <div class="project-footer">
        <button class="btn view-more">View More Projects</button>
    </div>
  </div>
</section>

<style>
  .projects {
    padding: 4rem 2rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  
  .projects-container {
    width: 70dvw;
  }
  .section-title {
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    justify-content: center;
  }

  .project-card {
    display: flex;
    flex-direction: column;
    background: var(--mesh-2);
    border-radius: 5px;
    overflow: hidden;
    transition:
      transform 0.3s ease-in-out,
      box-shadow 0.3s ease;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .project-card:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .project-header {
    width: 100%;
    height: 180px;
    overflow: hidden;
  }

  .project-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-body {
    padding: 1.5rem;
    text-align: left;
  }

  .project-body h3 {
    margin: 0 0 0.5rem;
    font-size: 1.5rem;
  }

  .project-body p {
    font-size: 1rem;
    color: var(--text-color);
  }

  .project-footer {
    padding: 1rem;
    text-align: center;
    display: flex;
    justify-content: center;
  }

  .project-link {
    text-decoration: none;
    color: var(--text-alt);
    font-weight: bold;
    font-size: 1.1rem;
  }

  .project-link:hover {
    text-decoration: underline;
  }
  .view-more{
    margin-top: 30px;
  }
</style>
