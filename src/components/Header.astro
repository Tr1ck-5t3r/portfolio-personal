---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/projects">Projects</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class=".toggle-buttons">
			<button class="menu-toggle" aria-label="Toggle Menu">
				â˜°
			</button>
			<button id="themeToggle" aria-label="theme toggle">
				<svg width="30px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
				  <path class="sun" fill-rule="evenodd" d="M12 17.5a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zm0 1.5a7 7 0 1 0 0-14 7 7 0 0 0 0 14zm12-7a.8.8 0 0 1-.8.8h-2.4a.8.8 0 0 1 0-1.6h2.4a.8.8 0 0 1 .8.8zM4 12a.8.8 0 0 1-.8.8H.8a.8.8 0 0 1 0-1.6h2.5a.8.8 0 0 1 .8.8zm16.5-8.5a.8.8 0 0 1 0 1l-1.8 1.8a.8.8 0 0 1-1-1l1.7-1.8a.8.8 0 0 1 1 0zM6.3 17.7a.8.8 0 0 1 0 1l-1.7 1.8a.8.8 0 1 1-1-1l1.7-1.8a.8.8 0 0 1 1 0zM12 0a.8.8 0 0 1 .8.8v2.5a.8.8 0 0 1-1.6 0V.8A.8.8 0 0 1 12 0zm0 20a.8.8 0 0 1 .8.8v2.4a.8.8 0 0 1-1.6 0v-2.4a.8.8 0 0 1 .8-.8zM3.5 3.5a.8.8 0 0 1 1 0l1.8 1.8a.8.8 0 1 1-1 1L3.5 4.6a.8.8 0 0 1 0-1zm14.2 14.2a.8.8 0 0 1 1 0l1.8 1.7a.8.8 0 0 1-1 1l-1.8-1.7a.8.8 0 0 1 0-1z"/>
				  <path class="moon" fill-rule="evenodd" d="M16.5 6A10.5 10.5 0 0 1 4.7 16.4 8.5 8.5 0 1 0 16.4 4.7l.1 1.3zm-1.7-2a9 9 0 0 1 .2 2 9 9 0 0 1-11 8.8 9.4 9.4 0 0 1-.8-.3c-.4 0-.8.3-.7.7a10 10 0 0 0 .3.8 10 10 0 0 0 9.2 6 10 10 0 0 0 4-19.2 9.7 9.7 0 0 0-.9-.3c-.3-.1-.7.3-.6.7a9 9 0 0 1 .3.8z"/>
				</svg>
			  </button>
		</div>
	</nav>
</header>
<style>
	header {
		z-index: 1000;
		display: flex;
		justify-content: center;
		position: sticky;
		top: 0;
		width: 98vw;
	}

	h2 {
		margin: 0;
		font-size: 1.2em;
	}

	h2 a {
		text-decoration: none;
		color: var(--text-color);
		font-weight: bold;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: 650px;
		margin: 1em auto;
		padding: 0.6em 1em;
		background: var(--nav-bg, rgba(72, 30, 120, 0.3));
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
		border-radius: 12px;
		backdrop-filter: blur(6px);
	}

	.internal-links {
		display: flex;
		gap: 1rem;
	}

	nav a {
		padding: 0.6em;
		color: var(--text-color);
		border-radius: 8px;
		text-decoration: none;
		transition: background 0.3s ease, color 0.3s ease;
	}

	nav a:hover {
		background: var(--hover-bg);
	}

	nav a.active {
		border-bottom: 3px solid var(--accent);
	}

	.right-menu {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.menu-toggle {
		display: none;
		background: none;
		border: none;
		color: var(--text-color);
		font-size: 1.5rem;
		cursor: pointer;
	}

	#themeToggle {
		border: 0;
		background: none;
		cursor: pointer;
	}
	.sun { fill: var(--text-color); }
	.moon { fill: transparent; }

	:global(.light) .sun { fill: transparent; }
	:global(.light) .moon { fill: var(--text-color); }

	@media (max-width: 720px) {
		.internal-links {
			display: none;
			flex-direction: column;
			position: absolute;
			top: 60px;
			right: 10px;
			background: var(--bg-color-muted);
			border-radius: 8px;
			padding: 1rem;
			box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
		}

		.internal-links.active {
			display: flex;
		}

		.menu-toggle {
			display: block;
		}
	}
</style>

<script is:inline>
	document.querySelector('.menu-toggle').addEventListener('click', () => {
		document.querySelector('.internal-links').classList.toggle('active');
	});
	// Function to get the saved theme or use dark by default
	const getUserTheme = () => {
		if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
		return localStorage.getItem('theme'); // User-saved preference
		}
		return 'dark'; // Default to dark theme
	};

	// Apply the theme on page load
	const applyTheme = (theme) => {
		document.documentElement.classList.toggle('dark', theme === 'dark');
		document.documentElement.classList.toggle('light', theme === 'light');
	};

	let theme = getUserTheme();
	applyTheme(theme);
	localStorage.setItem('theme', theme);

	// Theme toggle button functionality
	document.getElementById("themeToggle")?.addEventListener("click", () => {
		theme = theme === "dark" ? "light" : "dark";
		applyTheme(theme);
		localStorage.setItem("theme", theme);
  });
</script>
