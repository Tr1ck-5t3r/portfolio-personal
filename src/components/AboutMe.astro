---
import { Name, about} from '../consts';
---
<section id="about" class="about-section">
  <div class="about-container">
    <div class="about-image">
      <img src="/tarun.jpeg" alt="{Name}" class="profile-pic" />
    </div>
    <div class="about-content">
      {about}
      <a href="/projects" class="btn">View My Work</a>
    </div>
  </div>
</section>

<style>
  .about-section {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 4rem 2rem;
  }

  .about-container {
    display: flex;
    align-items: center;
    gap: 3rem;
    max-width: 1000px;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .about-image {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .profile-pic {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .profile-pic:hover {
    transform: scale(1.05);
  }

  .about-content {
    flex: 2;
    text-align: left;
  }

  .about-content h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--highlight-text);
  }

  .about-content p {
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--text-color);
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .about-container {
      flex-direction: column;
      text-align: center;
    }

    .profile-pic {
      width: 150px;
      height: 150px;
    }
  }
</style>