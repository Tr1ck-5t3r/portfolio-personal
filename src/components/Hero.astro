---
import { SITE_TITLE } from '../consts';
---

<section id="hero">
    <div class="hello-text-container">Hello There</div>
</section>

<style>
/* Hero Section */
#hero {
  position: relative;
  width: 100%;
  height: 60vh;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  background-color: var(--mesh-color-2);
  backdrop-filter: blur(7px);
}

/* Typing Animation */
@keyframes typing {
  0% {
    width: 0;
  }
  50% {
    width: 100%;
  }
  100% {
    width: 100%;
  }
}

/* Cursor Blinking Effect */
@keyframes blink-caret {
  50% {
    border-color: transparent;
  }
  100% {
    border-color: var(--text-color); /* Cursor color */
  }
}

/* Hero Text Styling */
.hello-text-container {
  font-family: 'Orbitron', monospace;
  font-size: 5rem;
  color: var(--text-color);
  display: inline-block;
  white-space: nowrap;
  overflow: hidden; /* Hide the overflow */
  width: 0; /* Initially 0 width */
  animation: typing 4s steps(10) 1s infinite, blink-caret 0.75s step-end infinite;
}

/* Cursor Simulation */
.hello-text-container:after {
  content: '|'; /* Simulate a cursor */
  font-size: 6rem;
  color: var(--text-color);
  animation: blink-caret 0.75s step-end infinite;
}
</style>
